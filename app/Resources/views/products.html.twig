{% extends 'home.html.twig' %}
{% block body %}


    <div class="container">
{% for message in app.flashes('success') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

<table class="table mt-5">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.name }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.category.name }}</td>
            <td><a href="{{ path('edit_product', {'id' : product.id}) }}" class="btn btn-primary">Edit</a></td>
            <td><a href="{{ path('delete_product', {'id' : product.id}) }}" class="btn btn-danger">Delete</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>


    </div>

    <div class="container-fluid">
        <a href="{{ path('create_product') }}" class="btn btn-primary mt-3 mb-5">Create new Product</a>
    </div>
{% endblock %}
