<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
    <title>Document</title>
</head>
<body>
<a href="{{ path('homepage') }}">To Home</a>
<a href="{{ path('create_category') }}">Create new Category</a>

{% for message in app.flashes('success') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

<table>
    <tr>
        <th>Name</th>
        <th>Check</th>
    </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.name }}</td>
            <td><a href="{{ path('create_category', {'id' : category.id}) }}">{{ category.id }} id</a></td>
        </tr>
    {% endfor %}
</table>




</body>
</html>