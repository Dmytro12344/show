{% extends 'home.html.twig' %}

{% block body %}

<div class="container">
    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th>{{ 'category.table.name'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}